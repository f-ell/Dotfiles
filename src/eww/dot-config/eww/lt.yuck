(defwindow bar-lt
    :monitor 0
    :geometry (geometry
        :x '0'
        :y '0'
        :width '100%'
        :height 32
        :anchor 'top center'
    )
    :wm-ingore false
    :stacking 'bg'
    :reserve (struts :distance 32 :side 'top')
    (centerbox
        :orientation 'h'
        :class 'bar'
        (box
            :space-evenly false
            :halign 'start'
            :class 'section start'
            (desktops-lt)
            (separator-lt)
            (layout)
        )
        (box
            :space-evenly false
            :halign 'center'
            :class 'section center'
        )
        (box
            :space-evenly false
            :halign 'end'
            :class 'section end'
            (battery)
            (separator)
            (templt)
            (separator)
            (time)
        )
    )
)

(defwidget battery []
    (label
        :text '${EWW_BATTERY.BAT0.status == 'Charging' ? '+'
            : ''} ${round(EWW_BATTERY.total_avg, 0)}%'
    )
)

(defpoll templt :interval '2s' :initial 'CPU: 0Â°C' `temp.lt`)
(defwidget templt []
    (label
        :text templt
    )
)
