(include 'dt.yuck')
(include 'lt.yuck')

(defwidget separator-dt []
    (label
        :class 'separator'
        :text 'â”€'
    )
)
(defwidget separator-lt []
    (label
        :class 'separator'
        :text '|'
    )
)

(deflisten desktops :initial '[]' './desktops.sh')
(defwidget desktops-dt []
    (box :orientation 'v' :class 'desktop'
        (for d in desktops
            (button
                :onclick {d.command}
                :class {d.state}
                {d.icon}
            )
        )
    )
)
(defwidget desktops-lt []
    (box :class 'desktop'
        (for d in desktops
            (button
                :onclick {d.command}
                :class {d.state}
                {d.icon}
            )
        )
    )
)

(deflisten layout :initial '[]' 'layout.bspwm')
(defwidget layout []
    (label
        :text layout
    )
)

(defwidget time []
    (label
        :text '${formattime(EWW_TIME, '%A %I:%M %p')}'
    )
)
