#!/bin/sh
#  ____   ____
#  |   \  |  |______
#  |    \ |  | ___  \
#  |     \|  | |  \  |
#  |  \   \  | |__/  |
#  |  |\     | _____/
#  |__| \____| | Author: Nico Pareigis
#           |__| bspwm

# CONFIGURATION
if [ $MACHINE = 'DT' ]; then
  bspc monitor DP-2 -d 1 2 3 4
  bspc monitor DP-0 -d 5
else
  bspc monitor eDP1 -d 1 2 3 4
fi

bspc config window_gap      18
bspc config border_width    2
bspc config split_ratio     0.50
bspc config top_padding     0
bspc config right_padding   0
bspc config bottom_padding  0
bspc config left_padding    0

# normal_border_color   unfocused window
# focused_border_color  active window; focused monitor
# presel_feedback_color preselect preview

Theme='sakura'
if [ $Theme = 'cthulu' ]; then
  bspc config focused_border_color  '#6090a0'
  bspc config active_border_color   '#205060'
  bspc config normal_border_color   '#205060'
  bspc config presel_feedback_color '#104050'

elif [ $Theme = 'sakura' ]; then
  bspc config focused_border_color  '#2d3740'
  bspc config active_border_color   '#08171e'
  bspc config normal_border_color   '#08171e'
  bspc config presel_feedback_color '#0d1720'
  Wallpaper=~/Pictures/Wallpapers/nature/white_sakura.jpg

elif [ $Theme = 'saturn' ]; then
  bspc config focused_border_color  '#ffffff'
  bspc config active_border_color   '#212121'
  bspc config normal_border_color   '#212121'
  bspc config presel_feedback_color '#fafafa'
  Wallpaper=~/Pictures/Wallpapers/monochrome/saturn.png

elif [ $Theme = 'mono' ]; then
  bspc config normal_border_color   '#303030'
  bspc config focused_border_color  '#e8e8e8'
  bspc config presel_feedback_color '#e8e8e8'
  Wallpaper=~/Pictures/Wallpapers/monochrome/cubes.png
fi

bspc config single_monocle          true
bspc config pointer_modifier        super
bspc config pointer_action1         move
bspc config pointer_action2         none
bspc config pointer_action3         resize_corner
bspc config click_to_focus          button1
bspc config focus_follows_pointer   true
bspc config pointer_follows_focus   false
bspc config pointer_follows_monitor false

bspc rule -r "*"
bspc rule -a discord  desktop='^5' follow=off
bspc rule -a Steam    desktop='^4' follow=off     state=floating
bspc rule -a *:*:'GNU Image Manipulation Program' state=floating
bspc rule -a *:*:Picture-in-Picture               state=floating

# AUTOSTART
if [ $MACHINE = 'DT' ]; then
  dunst &
  pgrep sxhkd || sxhkd ~/.config/sxhkd/sxhkdrc.dt ~/.config/bspwm/sxhkdrc.bspwm &
  pgrep conky || { conky -c ~/.config/conky/conky.conf; \
      conky -c ~/.config/conky/clock.conf; bspc monitor -f primary; } &
else
  dunst -conf ~/.config/dunst/dunstrc.lt &
  pgrep sxhkd || sxhkd ~/.config/sxhkd/sxhkdrc.lt ~/.config/bspwm/sxhkdrc.bspwm &
fi
picom --experimental-backends --unredir-if-possible &
feh --no-fehbg --bg-fill $Wallpaper &

# SCRATCHPADS
bspc rule -a *:*:sFiles hidden=on sticky=on locked=on state=floating rectangle=1280x720+320+180
bspc rule -a *:*:sMusic hidden=on sticky=on locked=on state=floating rectangle=1280x720+320+180
bspc rule -a *:*:sCalc  hidden=on sticky=on locked=on state=floating rectangle=300x400+50+50

# FLOAT windows on desktop '^4' and force Steam games to desktop '^4'
TargetDeskId=$(bspc query -D -d '^4')
bspc subscribe node_add | while read NodeInfo; do
  DeskId=${NodeInfo#node_add 0x* }
  DeskId=${DeskId%% *}
  NodeId=${NodeInfo##* }

  [ `xprop -id $NodeId | grep 'STEAM_GAME(CARDINAL)'` ] && bspc node $NodeId -d '^4'
  [ $TargetDeskId = $DeskId ] && bspc node $NodeId -t floating
done

# if [ $MACHINE = 'DT' ]; then
  # sleep 2
  # noisetorch -i \
    # -s 'alsa_input.usb-Generic_Blue_Microphones_201701110001-00.analog-stereo' \
    # -t 95 &
# fi
