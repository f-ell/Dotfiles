Ping=$(command -v ping)
ping() {
  $Ping -c1 ${1:-archlinux.org}
}
owns() {
  [[ -z $1 ]] && { printf "Error: no command specified!\n"; return; }
  Program=`command -v $1`
  [[ -z $Program ]] \
    && printf "Error: $1 not found!\n" \
    || pacman -Qo $Program
}


alias -- -='z -'

alias code='code --extensions-dir '$XDG_DATA_HOME'/vscode'
alias dots='z ~/Git/Dotfiles/'
alias e='exa'
alias e1='exa -1'
alias ed='exa -ld'
alias el='exa -la'
alias gff='nff ~/Git'
alias hist='tail -10 <(history)'
alias hml='himalaya'
alias psearch='pacman -Ss $1'
alias pquery='pacman -Q | rg -i $1'
alias pcount='pacman -Q | wc -l'
alias scripts='z ~/Git/Scripts/'
alias um='udisksctl mount -b /dev/sdd1'   # not particularly smart
alias uu='udisksctl unmount -b /dev/sdd1' # not particularly smart either
alias v=$EDITOR
alias va=$EDITOR' ~/.aliases && source ~/.aliases'
alias yeet='doas pacman -Qtdq | doas pacman -Rns -'
alias zath='zathura --fork'


Sconf='~/.config/bspwm/sxhkdrc.bspwm ~/.config/sxhkd/sxhkdrc.'
if [ $MACHINE = 'DT' ]; then
  Sconf="${Sconf}dt"
  Dconf=''
else
  Sconf="${Sconf}lt"
  Dconf='-conf ~/.config/dunst/dunstrc.lt' 
  alias netstart='rfkill unblock wifi; doas systemctl start NetworkManager iwd'
  alias netstop='doas systemctl stop NetworkManager iwd; rfkill block wifi'
fi
alias dcr="pkill dunst; dunst $Dconf &; disown dunst"
alias scr="pkill sxhkd; sxhkd $Sconf &; disown sxhkd"
unset {D,S}conf
